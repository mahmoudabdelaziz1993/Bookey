<h2>All authors </h2>
<form action="/author" method="GET">
    <input type="text" name="name" value="<%=searchOption%>">
    <button type="submit"> Search </button>
</form>
<br>
<% books.forEach((book)=>{%>
<div>
    <a href="/book/preview/<%= book.id %>"> 
        <img src="<%= book.bookCover %>" height="150" width="100">
    </a>
    <a href="/book/edit/<%= book.id %>">edit</a>
    <%- include("../partials/deleteForm",{URL:`/book/delete/${book.id}`})%>
</div>
<%})%>